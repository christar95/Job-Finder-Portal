@model Entities.Models.Job
@using Entities.Enums
@{
    ViewBag.Title = "Create New Ad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-8 col-md-8 mb-10">
    <h3 class="mb-30">@ViewBag.Title</h3>
    <form method="post">
        <div class="mt-10">
            <input type="text" name="Title" placeholder="Title"
                   onfocus="this.placeholder = ''" onblur="this.placeholder = 'Title'" required
                   class="single-input">
        </div>
        <div class="mt-10">
            <input type="text" name="Specialty" placeholder="Specialty"
                   onfocus="this.placeholder = ''" onblur="this.placeholder = 'Specialty'" required
                   class="single-input">
        </div>
        <div class="mt-10">
            <textarea class="single-textarea" placeholder="Description" onfocus="this.placeholder = ''"
                      name="Description" onblur="this.placeholder = 'Description'" required></textarea>
        </div>
        <div class="mt-10">
            <input type="number" name="Salary" placeholder="Salary"
                   onfocus="this.placeholder = ''" onblur="this.placeholder = 'Salary'" required
                   class="single-input-primary">
        </div>
        <div class="mt-10">
            
            <input type="text" name="Region" placeholder="Region" onfocus="this.placeholder = ''"
                   onblur="this.placeholder = 'Region'" required class="single-input">
        </div>
        <div class="mt-10">
            
            <div class="form-select">
                @Html.EnumDropDownListFor(m => m.EmploymentType, new { @class = "single-input" })
            </div>
        </div>
        <div class="mt-10">
            
            <div class="form-select">

                @Html.EnumDropDownListFor(m => m.WorkPlace, new { @class = "single-input" })

            </div>
        </div>
        <div class="mt-10">
            <input type="hidden" name="DatePosted" value="@DateTime.Now" />
        </div>
        <div class="mt-10">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    </form>
</div>

