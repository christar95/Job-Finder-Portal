@model GroupProjectCB16.Models.ApplicationUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Edit Profile</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
